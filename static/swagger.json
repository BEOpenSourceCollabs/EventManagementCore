{
  "openapi": "3.0.3",
  "info": {
    "title": "Event Management API",
    "description": "This is a backend for event management application",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8081/api"
    }
  ],
  "tags": [
    {
      "name": "default"
    },
    {
      "name": "auth",
      "description": "user authentication"
    },
    {
      "name": "events",
      "description": "operations about events"
    },
    {
      "name": "user",
      "description": "Operations about user"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "default"
        ],
        "summary": "health check endpoint",
        "operationId": "health",
        "responses": {
          "200": {
            "description": "health check success",
            "content": {
              "text/html": {
                "example": "Ok"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "login using credentials",
        "operationId": "login",
        "requestBody": {
          "description": "credentials",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/BadRequestResponse"
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Invalid Credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal error most likely due to service unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "sign up as new user",
        "operationId": "register",
        "requestBody": {
          "description": "user's basic information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/BadRequestResponse"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal error most likely due to service unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/check": {
      "get": {
        "tags": [
          "auth"
        ],
        "operationId": "check",
        "summary": "check if access token is still valid",
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CheckResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "tokenAuth": []
          }
        ]
      }
    },
    "/users": {
      "post": {
        "tags": [
          "user"
        ],
        "operationId": "HandleCreateUser",
        "summary": "create user",
        "description": "**Requires authenticated user with the 'admin' role.**",
        "requestBody": {
          "description": "user's information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful user created",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/RestAPIResponse"
                    },
                    {
                      "properties": {
                        "data": {
                          "type": "object",
                          "$ref": "#/components/schemas/User"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/UnauthorizedResponse"
                    },
                    {
                      "properties": {
                        "messages": {
                          "example": "user is missing the required role 'admin'"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal Error",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ServerErrorResponse"
                    },
                    {
                      "properties": {
                        "messages": {
                          "example": "repository connection lost"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "tokenAuth": []
          }
        ]
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "operationId": "HandleGetUserById",
        "summary": "get user by id",
        "description": "**Requires authenticated user with the 'admin' role.**",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuidv4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/RestAPIResponse"
                    },
                    {
                      "properties": {
                        "data": {
                          "type": "object",
                          "$ref": "#/components/schemas/User"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/UnauthorizedResponse"
                    },
                    {
                      "properties": {
                        "messages": {
                          "example": "user is missing the required role 'admin'"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal Error",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ServerErrorResponse"
                    },
                    {
                      "properties": {
                        "messages": {
                          "example": "repository connection lost"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "tokenAuth": []
          }
        ]
      },
      "put": {
        "tags": [
          "user"
        ],
        "operationId": "HandleUpdateUserById",
        "summary": "update user by id",
        "description": "**Requires authenticated user with the 'admin' role.**",
        "requestBody": {
          "description": "user's information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateUser"
              }
            }
          },
          "required": true
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuidv4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/RestAPIResponse"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/User"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/BadRequestResponse"
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/UnauthorizedResponse"
                    },
                    {
                      "properties": {
                        "messages": {
                          "example": "user is missing the required role 'admin'"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal Error",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ServerErrorResponse"
                    },
                    {
                      "properties": {
                        "messages": {
                          "example": "repository connection lost"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "tokenAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "UserInfo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "9dc2391b-595e-4a9a-aefb-75dbe18fe5ca"
          },
          "username": {
            "type": "string",
            "example": "john_doe"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "role": {
            "type": "string",
            "example": "organizer"
          }
        }
      },
      "RestAPIResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "ErrorAPIResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/RestAPIResponse"
          },
          {
            "properties": {
              "success": {
                "example": false
              },
              "code": {
                "type": "string",
                "example": "AUTH_INVALID_CREDENTIALS"
              },
              "messages": {
                "oneOf": [
                  {
                    "type": "string",
                    "example": "more information about the error..."
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "example": "more information about the error..."
                    }
                  }
                ]
              }
            }
          }
        ]
      },
      "BadRequestResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ErrorAPIResponse"
          },
          {
            "properties": {
              "code": {
                "type": "string",
                "example": "BAD_REQUEST"
              },
              "messages": {
                "example": [
                  "validation error"
                ]
              }
            }
          }
        ]
      },
      "ServerErrorResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ErrorAPIResponse"
          },
          {
            "properties": {
              "code": {
                "example": "INTERNAL_SERVER_ERROR"
              },
              "messages": {
                "example": [
                  "Service is unavailable"
                ]
              }
            }
          }
        ]
      },
      "UnauthorizedResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ErrorAPIResponse"
          },
          {
            "properties": {
              "code": {
                "example": "AUTH_INVALID_CREDENTIALS"
              },
              "messages": {
                "example": [
                  "invalid credentials"
                ]
              }
            }
          }
        ]
      },
      "CheckResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/RestAPIResponse"
          },
          {
            "properties": {
              "data": {
                "$ref": "#/components/schemas/UserInfo"
              }
            }
          }
        ]
      },
      "CreateOrUpdateUser": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/UserData"
          },
          {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "enum": [
                  "user",
                  "organizer",
                  "admin"
                ]
              },
              "verified": {
                "type": "boolean",
                "example": true
              }
            }
          }
        ]
      },
      "UserData": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "curiousdev@bedevs.org"
          },
          "first_name": {
            "type": "string",
            "example": "john"
          },
          "last_name": {
            "type": "string",
            "example": "doe"
          },
          "username": {
            "type": "string",
            "example": "john_doe"
          }
        }
      },
      "RegisterRequest": {
        "required": [
          "email",
          "username",
          "password"
        ],
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/UserData"
          },
          {
            "properties": {
              "password": {
                "type": "string",
                "example": "CuriousDevs2024!",
                "description": "password must be at least 6 characters long and alphanumeric"
              }
            }
          }
        ]
      },
      "RegisterResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/RestAPIResponse"
          },
          {
            "properties": {
              "data": {
                "type": "string",
                "example": "successfully signed up"
              }
            }
          }
        ]
      },
      "LoginResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/RestAPIResponse"
          },
          {
            "properties": {
              "data": {
                "$ref": "#/components/schemas/LoginSuccessDTO"
              }
            }
          }
        ]
      },
      "LoginRequest": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "curiousdev@bedevs.org"
          },
          "password": {
            "type": "string",
            "example": "CuriousDevs2024!"
          }
        }
      },
      "LoginSuccessDTO": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/UserInfo"
          },
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          }
        }
      },
      "EventListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "$ref": "#/components/schemas/EventsArray"
          }
        }
      },
      "Organizer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "9dc2391b-595e-4a9a-aefb-75dbe18fe5ca"
          },
          "username": {
            "type": "string",
            "example": "john_doe"
          },
          "avatar": {
            "type": "string",
            "example": "https://s3-bucket/avatar.png"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "e5f04d06-a6ff-4522-a5f4-86b3c150991c"
          },
          "username": {
            "type": "string",
            "example": "john_doe"
          },
          "email": {
            "type": "string",
            "example": "curiousdev@bedevs.org"
          },
          "first_name": {
            "type": "string",
            "example": "john"
          },
          "second_name": {
            "type": "string",
            "example": "doe"
          },
          "birthday": {
            "$ref": "#/components/schemas/NullTime"
          },
          "role": {
            "type": "string",
            "enum": [
              "user",
              "organizer",
              "admin"
            ]
          },
          "verified": {
            "type": "boolean",
            "example": false
          },
          "about": {
            "$ref": "#/components/schemas/NullString"
          },
          "created_at": {
            "type": "string",
            "example": "2024-06-14T19:17:50.776Z",
            "format": "datetime"
          },
          "updated_at": {
            "type": "string",
            "example": "2024-06-14T19:17:50.776Z",
            "format": "datetime"
          }
        }
      },
      "NullTime": {
        "type": "object",
        "properties": {
          "Time": {
            "type": "string"
          },
          "Valid": {
            "type": "boolean"
          }
        }
      },
      "NullString": {
        "type": "object",
        "properties": {
          "String": {
            "type": "string"
          },
          "Valid": {
            "type": "boolean"
          }
        }
      },
      "Event": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "1df76107-4585-49f0-b772-85e830b437af"
          },
          "name": {
            "type": "string",
            "example": "Tomorrowland 2024"
          },
          "description": {
            "type": "string",
            "example": "most popular music festival in the world"
          },
          "start_date": {
            "type": "string",
            "format": "date-string",
            "example": "2024-06-05T12:29:25.432Z"
          },
          "end_date": {
            "type": "string",
            "format": "date-string",
            "example": "2024-06-06T12:29:25.432Z"
          },
          "is_paid": {
            "type": "boolean",
            "example": false
          },
          "event_type": {
            "type": "string",
            "example": "offline"
          },
          "country": {
            "type": "string",
            "example": "US"
          },
          "city": {
            "type": "string",
            "example": "New York City"
          },
          "likes": {
            "type": "number",
            "example": 1882
          },
          "follows": {
            "type": "number",
            "example": 3123
          },
          "attendees": {
            "type": "number",
            "example": 11313
          },
          "organizer": {
            "$ref": "#/components/schemas/Organizer"
          }
        }
      },
      "EventsArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Event"
        }
      }
    },
    "securitySchemes": {
      "tokenAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}